<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Police -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ROM_Apparel1920sPoliceHat</defName>
    <label>police hat</label>
    <description>Designates someone as an authority figure. The accuracy of this designation is left to the eye of the beholder.</description>
    <graphicData>
      <texPath>Apparel/Display/CallOfCthulhu_1920sPoliceHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.225</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.6</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Hats/1920sPoliceHat/CallOfCthulhu_1920sPoliceHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CallOfCthulhu_TownsfolkPolice</li>
      </tags>
      <defaultOutfitTags>
        <li>CallOfCthulhu_TownsfolkPolice</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>ROM_OccupationClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ROM_Apparel1920sPoliceOutfit</defName>
    <description>Early 20th century attire suited for local enforcers to use when keeping the peace.</description>
    <label>police uniform</label>
    <graphicData>
      <texPath>Apparel/Display/CallOfCthulhu_1920sPoliceOutfit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>150</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>12500</WorkToMake>
      <Mass>2.6</Mass>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.6</EquipDelay>
    </statBases>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bodywear_Clothing/1920sPoliceOutfit/CallOfCthulhu_1920sPoliceOutfit</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>CallOfCthulhu_TownsfolkPolice</li>
      </tags>
      <defaultOutfitTags>
        <li>CallOfCthulhu_TownsfolkPolice</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>ROM_OccupationClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
</Defs>