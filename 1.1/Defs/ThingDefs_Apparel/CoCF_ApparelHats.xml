<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>ROM_Apparel_CallOfCthulhuTopHat</defName>
    <label>top hat</label>
    <description>An elegant hat which gives the wearer a sophisticated look of importance. Improves social impact.</description>
    <graphicData>
      <texPath>Apparel/Display/ROMTopHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <generateCommonality>0.11</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Hats/TopHat/ROMTopHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CallOfCthulhu_Townsfolk</li>
      </tags>
      <defaultOutfitTags>
        <li>CallOfCthulhu_Townsfolk</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
