<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Nurse -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>ROM_Apparel_NurseCap</defName>
    <label>nurse cap</label>
    <description>An ancient nurse cap from the first Great War. While typically worn by female nurses historically, residents of the rim both male and female have found it most fashionable.</description>
    <graphicData>
      <texPath>Apparel/Display/NurseCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.6</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MedicalSurgerySuccessChance>0.05</MedicalSurgerySuccessChance>
      <MedicalTendQuality>0.05</MedicalTendQuality>
      <MedicalTendSpeed>0.05</MedicalTendSpeed>
      <MedicalOperationSpeed>0.05</MedicalOperationSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Hats/NurseCap/NurseCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CallOfCthulhu_TownsfolkNurse</li>
      </tags>
      <defaultOutfitTags>
        <li>CallOfCthulhu_TownsfolkNurse</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>ROM_OccupationClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ROM_Apparel_WW1NurseUniform</defName>
    <description>An ancient nurse uniform from the first Great War. While typically worn by female nurses historically, residents of the rim both male and female have found it most fashionable.</description>
    <label>nurse uniform</label>
    <graphicData>
      <texPath>Apparel/Display/WW1Nurse</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>150</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList>
      <MedicineIndustrial>2</MedicineIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <Mass>2.2</Mass>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>15000</WorkToMake>
      <StuffEffectMultiplierArmor>0.03</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.2</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MedicalSurgerySuccessChance>0.10</MedicalSurgerySuccessChance>
      <MedicalTendQuality>0.10</MedicalTendQuality>
      <MedicalTendSpeed>0.1</MedicalTendSpeed>
      <MedicalOperationSpeed>0.1</MedicalOperationSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Bodywear_Clothing/WW1NurseUniform/WW1Nurse</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>CallOfCthulhu_TownsfolkNurse</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>ROM_OccupationClothing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
</Defs>