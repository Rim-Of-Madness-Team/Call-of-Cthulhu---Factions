  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Revolver</defName>
    <label>revolver bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <DamageAmountBase>11</DamageAmountBase>
      <Speed>55</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_Revolver</defName>
    <label>revolver</label>
    <description>Military and police model revolving gun with six .38 caliber bullet chambers. Fires six shots before reloading.</description>
    <graphicData>
      <texPath>Guns/CallOfCthulhu_revolver</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractRevolver</soundInteract>
    <statBases>
      <WorkToMake>17000</WorkToMake>
	  <Mass>1.4</Mass>
      <MarketValue>215</MarketValue>
      <AccuracyTouch>0.91</AccuracyTouch>
      <AccuracyShort>0.71</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>1.56</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <Component>2</Component>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_Revolver</projectileDef>
        <warmupTime>0.5</warmupTime>
        <range>24</range>		
        <soundCast>ShotRevolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>15</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>CallOfCthulhu_Guns</li>
    </weaponTags>	
  </ThingDef>

