	  <Mass>1.2</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>tip</label>
        <capacities>
		  <li>COC_BrandingStabT</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>

	<weaponTags>
      <li>CallOfCthulhu_Melee</li>	
      <li>CallOfCthulhu_Rancher</li>	
	</weaponTags>
  </ThingDef>

