  <ThingDef ParentName="CallOfCthulhu_BaseMeleeWeapon_Sharp">
    <defName>ROM_PoleHook</defName>
    <label>polehook</label>
    <description>A meat hook fixed to the end of a pole. A terrifying weapon to behold.</description>
    <graphicData>
      <texPath>WeaponMelee/CallOfCthulhu_PoleHook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>7000</WorkToMake>
	  <Mass>1.2</Mass>
      <MeleeWeapon_DamageAmount>9</MeleeWeapon_DamageAmount>
      <MeleeWeapon_Cooldown>1.66</MeleeWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Stab</meleeDamageDef>
      </li>
    </verbs>
	<weaponTags>
      <li>CallOfCthulhu_Melee</li>	
      <li>CallOfCthulhu_CoastalMelee</li>
      <li>CallOfCthulhu_Angler</li>	  
	</weaponTags>	
  </ThingDef>
