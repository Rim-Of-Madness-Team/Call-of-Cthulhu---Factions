	<!-- MERF -->

	<ThingDef ParentName="CallOfCthulhuHatMakeableBase">
		<defName>ROM_Apparel_MERF_LightHelmet</defName>
		<description>A lightweight combat helmet designed for MERF special forces. MERF stands for Mobile Eldritch Response Force.
		</description>
		<label>MERF Light Helmet</label>
		<graphicData>
			<texPath>Apparel/Display/ROMLightHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<costList>
      <Component>4</Component>
      <Steel>25</Steel>
	</costList>
		<statBases>
		  <WorkToMake>50000</WorkToMake>
			<Mass>1.9</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>800</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
      <ArmorRating_Heat>0.35</ArmorRating_Heat>
      <ArmorRating_Electric>0</ArmorRating_Electric>
      <Insulation_Cold>-3</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
		</statBases>
		<generateCommonality>0.1</generateCommonality>
		<apparel>
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <worngraphicPath>Apparel/Hats/LightHelmet/ROMLightHelmet</worngraphicPath>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>ROM_LightMERF</li>
		  </tags>
		  <defaultOutfitTags>
			<li>ROM_LightMERF</li>
		  </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>ROM_MERFOutfits</researchPrerequisite>
		</recipeMaker>
	</ThingDef>

